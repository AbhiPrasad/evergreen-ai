{
  "name": "evergreen-ai",
  "version": "0.0.1",
  "description": "Evergreen AI Monorepo with Mastra tools and examples",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "test:run": "turbo test:run",
    "test:coverage": "turbo test:coverage",
    "dev": "turbo dev",
    "clean": "turbo clean",
    "lint": "turbo lint",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "monorepo",
    "mastra",
    "ai",
    "tools"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "packageManager": "npm@11.5.2",
  "engines": {
    "node": ">=20.9.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "prettier": "^3.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "volta": {
    "node": "24.6.0",
    "npm": "11.5.2"
  }
}
