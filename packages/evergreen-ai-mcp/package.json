{
  "name": "@sentry/evergreen-ai-mcp",
  "version": "0.0.1",
  "description": "Boilerplate package using evergreen-ai-agents",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "dev": "tsc --watch",
    "mcp": "node dist/index.js",
    "start": "npm run build && npm run mcp"
  },
  "keywords": [
    "mastra",
    "ai",
    "tools",
    "agents",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.9.0"
  },
  "dependencies": {
    "@mastra/mcp": "^0.10.11",
    "@sentry/evergreen-ai-agents": "0.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
