{
  "name": "@sentry/evergreen-ai-mcp",
  "version": "0.0.1",
  "description": "Boilerplate package using evergreen-ai-agents",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "scripts": {
    "build": "tsdown",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "dev": "tsdown --watch",
    "mcp": "node dist/index.js",
    "start": "npm run build && npm run mcp"
  },
  "keywords": [
    "mastra",
    "ai",
    "tools",
    "agents",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.9.0"
  },
  "dependencies": {
    "@mastra/mcp": "^0.0.0-ai-v5-20250813235735",
    "@sentry/evergreen-ai-agents": "0.0.1",
    "@sentry/node": "^10.5.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.5",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "tsdown": "^0.14.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
