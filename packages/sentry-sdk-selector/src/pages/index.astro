---
import Layout from '../layouts/Layout.astro';
import SentrySDKSelector from '../components/SentrySDKSelector';
---

<Layout title="Sentry SDK Changelog Summary">
  <main>
    <div class="container">
      <div class="header">
        <h1>Sentry SDK Changelog Summary</h1>
        <p>
          Select a Sentry SDK and version range to get an AI-powered summary of the changes.
        </p>
      </div>
      <div class="app-content">
        <SentrySDKSelector client:load />
      </div>
    </div>
  </main>
</Layout>

<style>
  :global(html, body) {
    margin: 0;
    padding: 0;
    height: 100%;
    overflow: hidden;
  }

  main {
    height: 100vh;
    width: 100%;
    color: white;
    font-size: 16px;
    line-height: 1.6;
    position: relative;
  }

  .container {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .header {
    background: linear-gradient(135deg, #1a0d2e 0%, #2d1b4e 100%);
    padding: 2rem;
    text-align: center;
    border-bottom: 1px solid #563d7c;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    background: linear-gradient(45deg, #dfb0ef, #c396d8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  p {
    margin: 0;
    opacity: 0.9;
    color: #c396d8;
  }

  .app-content {
    flex: 1;
    overflow: hidden;
  }
</style>
