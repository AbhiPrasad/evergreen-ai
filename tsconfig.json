{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@evergreen-ai/mastra": ["packages/mastra/src/index.ts"],
      "@evergreen-ai/mastra/*": ["packages/mastra/src/*"]
    }
  },
  "include": ["packages/**/*", "globalSetup.ts", "testSetup.ts", "config/**/*"],
  "exclude": ["node_modules", "dist", "**/dist"]
}
